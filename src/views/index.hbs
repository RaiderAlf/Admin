<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminServer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body style="height: 90vh;">
    <div class="p-1 m-2 d-flex flex-row justify-content-between align-items-center" style="background: #7fa4ee;border-radius: 20px;">
        <h1 class="ms-4 ps-1">AdminServer</h1>
        <div class="form-check form-switch me-4 pe-1 form-check-reverse">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
            <label class="form-check-label" for="flexSwitchCheckReverse">ðŸŒž</label>
        </div>
    </div>
    <div class="container-fluid d-flex justify-content-center align-items-center" data-bs-theme="dark" >
        <div class="d-flex flex-column justify-content-center align-items-center" style="height: 80vh;">
            <div class="d-flex flex-row justify-content-center align-items-center">
                <form action="" method="post">
                    <div class="mb-1 p-2 d-flex flex-column justify-content-center align-items-center">
                        <label for="input1" class="form-label">Correo Electronico</label>
                        <input type="email" id="inputEmail" class="form-control" value="" placeholder="nombre@ejemplo.com">
                    </div>
                    <div class="mb-1 p-2 d-flex flex-column justify-content-center align-items-center">
                        <label for="password" class="form-label">ContraseÃ±a</label>
                        <input type="text" class="form-control" id="inputPass" value="" placeholder="min 8 caracteres">
                    </div>
                </form>
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center">
                <button class="btn btn-primary m-2" id="btnLogin">Ingresar</button>
                <div>
                    <button type="button" class="btn btn-outline-primary btn-sm me-1">Registrarse</button>
                    <button type="button" class="btn btn-outline-danger btn-sm ms-1">Olvide mi contraseÃ±a</button>
                </div>
            </div>
        </div>
    </div>
    <div class="p-1 position-absolute bg-light border bottom-0" style="width: 100vw;">
        <code class="container-fluid d-flex justify-content-center align-items-center">
            AdminServer 2023&REG;
        </code>
    </div>
    <script>
        const axios = require('axios');
        const FormData = require('form-data');

        let btnLogin = document.getElementById('btnLogin');

        btnLogin.addEventListener('click', (e)=>{
            let emailLogin = document.getElementById('inputEmail').value;
            let passLogin = document.getElementById('inputPass').value;

            const formData = new FormData();
            formData.append('email', emailLogin);
            formData.append('password', passLogin);

            axios.post('http://ejemplo.com/url', formData, {
                headers: formData.getHeaders(),
                }).then(response => {
                    console.log(response.data);
                }).catch(error => {
                    console.log(error);
                });
        });


    </script>
</body>
